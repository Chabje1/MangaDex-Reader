<mah:MetroWindow
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MangaDexReader.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaDexReader"
        mc:Ignorable="d"
        Title="Login" Height="167.695" Width="300" ResizeMode="NoResize" ContentRendered="LoginWindow_ContentRendered">
    <DockPanel Height="139" VerticalAlignment="Top">
        <Label Content="Username:" DockPanel.Dock="Top"/>
        <TextBox Name="UsernameTextBox" DockPanel.Dock="Top" Margin="10,0"/>
        <Label Content="Password:" DockPanel.Dock="Top"/>
        <TextBox Name="PasswordTextBox" DockPanel.Dock="Top" Margin="10,0"/>
        <Button Name="GoButton" Content="Go" Width="43" Margin="0,5" DockPanel.Dock="Bottom" Click="GoButton_Click"/>
    </DockPanel>
</mah:MetroWindow>
